// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int          @id @default(autoincrement())
  name        String
  surname     String
  nickname    String       @unique
  password    String
  avatar      String
  permissions Permission[]
  Meme        Meme[]
  Comment     Comment[]
  Like        Like[]
}

model Meme {
  id          Int       @id @default(autoincrement())
  image       String
  thumbnail   String
  description String
  createdAt   DateTime
  authorId    User      @relation(fields: [userId], references: [id])
  userId      Int
  category    Category  @relation(fields: [categoryId], references: [id])
  categoryId  Int
  Comment     Comment[]
  Like        Like[]
}

model Category {
  id    Int    @id @default(autoincrement())
  title String
  emoji String
  Meme  Meme[]
}

model Comment {
  id        Int      @id @default(autoincrement())
  comment   String
  createdAt DateTime
  authorId  User     @relation(fields: [userId], references: [id])
  userId    Int
  memesId   Meme     @relation(fields: [memeId], references: [id])
  memeId    Int
}

model Like {
  id       Int     @id @default(autoincrement())
  like     Boolean @default(true)
  authorId User    @relation(fields: [userId], references: [id])
  userId   Int
  meme     Meme    @relation(fields: [memeId], references: [id])
  memeId   Int
}

enum Permission {
  user
  admin
}
