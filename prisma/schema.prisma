// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int        @id @default(autoincrement())
  name        String
  surname     String
  nickname    String     @unique
  password    String
  permissions Permission[]
}

model Memes {
  id          Int    @id @default(autoincrement())
  image       String
  description String
}

model Items {
  id          Int    @id @unique @default(autoincrement())
  author      Auhtor @relation(fields: [auhtorId], references: [id])
  creatreAt   String
  description String
  thumbnail   String
  auhtorId    Int
}

model Auhtor {
  id       Int     @id @default(autoincrement())
  nickname String
  avatar   String
  Item     Items[]
}

enum Permission {
  user
  admin
}
