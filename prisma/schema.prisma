// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int          @id @default(autoincrement())
  name        String
  surname     String
  nickname    String       @unique
  password    String
  permissions Permission[]
}

model Memes {
  id          Int       @id @default(autoincrement())
  image       String
  description String
  Comment     Comment[]
}

model Items {
  id          Int    @id @unique @default(autoincrement())
  author      Auhtor @relation(fields: [auhtorId], references: [id])
  creatreAt   String
  description String
  thumbnail   String
  auhtorId    Int
}

model Auhtor {
  id       Int     @id @default(autoincrement())
  nickname String
  avatar   String
  Item     Items[]
}

model Comment {
  id      Int   @id @default(autoincrement())
  memeId  Memes @relation(fields: [memesId], references: [id])
  memesId Int
  comment String
}


model Like {
  id Int @id @unique @default(autoincrement())
  like Boolean @default(true)
}



enum Permission {
  user
  admin
}
